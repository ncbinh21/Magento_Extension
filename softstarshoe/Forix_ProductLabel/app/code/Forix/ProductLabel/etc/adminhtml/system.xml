<config	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="forix" translate="label" sortOrder="200">
            <label>Forix</label>
        </tab>
        <section id="productlabel" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1"	showInStore="1">
            <label>Product Badge</label>
            <tab>forix</tab>
            <resource>Forix_ProductLabel::productlabel</resource>
            <group id="settings" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Settings</label>
                <field	id="active" translate="label" type="select"  sortOrder="10" showInDefault="1"	showInWebsite="1"	showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
             </group>
        </section>
    </system>
</config>
