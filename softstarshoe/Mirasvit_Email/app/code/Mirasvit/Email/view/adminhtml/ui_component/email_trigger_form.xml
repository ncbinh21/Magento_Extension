<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">email_trigger_form.email_trigger_form_data_source</item>
            <item name="deps" xsi:type="string">email_trigger_form.email_trigger_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">email_trigger_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="array">
                <item name="name" xsi:type="string">back</item>
                <item name="label" xsi:type="string" translate="true">Back</item>
                <item name="class" xsi:type="string">back</item>
                <item name="url" xsi:type="url" path="*/*/"/>
            </item>
            <item name="delete" xsi:type="string">Mirasvit\Email\Ui\Trigger\Form\Control\DeleteButton</item>
            <item name="reset" xsi:type="array">
                <item name="name" xsi:type="string">reset</item>
                <item name="label" xsi:type="string" translate="true">Reset</item>
                <item name="id" xsi:type="string">reset</item>
            </item>
            <item name="send-test" xsi:type="string">Mirasvit\Email\Ui\Trigger\Form\Control\SendTestButton</item>
            <item name="save-split-button" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">Save</item>
                <item name="class_name" xsi:type="string">Magento\Ui\Component\Control\SplitButton</item>
                <item name="button_class" xsi:type="string">widget-button-update</item>
                <item name="data_attribute" xsi:type="array">
                </item>
                <item name="options" xsi:type="array">
                    <item name="save-button" xsi:type="array">
                        <item name="label" xsi:type="string" translate="true">Save</item>
                        <item name="default" xsi:type="boolean">true</item>
                        <item name="id_hard" xsi:type="string">save</item>
                    </item>
                    <item name="save-continue-button" xsi:type="array">
                        <item name="label" xsi:type="string" translate="true">Save and Continue Edit</item>
                        <item name="id_hard" xsi:type="string">save_and_continue</item>
                    </item>
                </item>
            </item>
        </item>
    </argument>

    <dataSource name="email_trigger_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Mirasvit\Email\Ui\Trigger\Form\DataProvider</argument>
            <argument name="name" xsi:type="string">email_trigger_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">trigger_id</argument>
            <argument name="requestFieldName" xsi:type="string">trigger_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="*/*/save">
                        <param name="_current">1</param>
                    </item>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>

    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string">General Information</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <!--<item name="dataScope" xsi:type="string">trigger</item>-->
            </item>
        </argument>

        <field name="trigger_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">trigger_id</item>
                    <item name="source" xsi:type="string">trigger</item>
                </item>
            </argument>
        </field>

        <field name="title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Title</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">trigger</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="is_active">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Is Active</item>
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="default" xsi:type="number">0</item>
                    <item name="source" xsi:type="string">trigger</item>
                </item>
            </argument>
        </field>

        <field name="is_admin" class="Mirasvit\Email\Ui\Trigger\Form\Component\Field\IsAdmin">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataScope" xsi:type="string">is_admin</item>
                    <item name="source" xsi:type="string">trigger</item>
                </item>
            </argument>
        </field>
        <field name="admin_email" class="Mirasvit\Email\Ui\Trigger\Form\Component\Field\AdminEmail">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Recipient Email</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">trigger</item>
                    <item name="notice" xsi:type="string" translate="true">Separate e-mails by commas</item>
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </field>

        <field name="active_from">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Active From</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="source" xsi:type="string">trigger</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-date" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="active_to">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Active To</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">date</item>
                    <item name="source" xsi:type="string">trigger</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-date" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="store_ids">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Cms\Ui\Component\Listing\Column\Cms\Options</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Store View</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="default" xsi:type="string">0</item>
                    <item name="source" xsi:type="string">trigger</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="event">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Mirasvit\Email\Ui\Event\Source\Event</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Trigger Event</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="elementTmpl" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                    <item name="component" xsi:type="string">Mirasvit_Email/js/form/element/event-select</item>
                    <item name="ruleUrl" xsi:type="url" path="*/*/rule">
                        <param name="_current">1</param>
                    </item>
                    <item name="ruleName" xsi:type="string">${$.ns}.${$.ns}.audience.conditions_apply_to.html_content</item>
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="showCheckbox" xsi:type="boolean">false</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">false</item>
                    <item name="source" xsi:type="string">trigger</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="cancellation_event">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Mirasvit\Email\Ui\Event\Source\Event</item>
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Cancellation Event</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="elementTmpl" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                    <item name="componentType" xsi:type="string">field</item>
                    <item name="filterOptions" xsi:type="boolean">true</item>
                    <item name="showCheckbox" xsi:type="boolean">true</item>
                    <item name="disableLabel" xsi:type="boolean">true</item>
                    <item name="multiple" xsi:type="boolean">true</item>
                    <item name="source" xsi:type="string">trigger</item>
                </item>
            </argument>
        </field>
    </fieldset>

    <fieldset name="chain">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string">Mails Chain</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="dataScope" xsi:type="string">chain</item>
            </item>
        </argument>

            <container name="chain_collection">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="component" xsi:type="string">Mirasvit_Email/js/form/components/collection</item>
                        <item name="type" xsi:type="string">collection</item>
                        <item name="active" xsi:type="string">1</item>
                        <item name="itemTemplate" xsi:type="string">item_template</item>
                        <item name="removeMessage" xsi:type="string" translate="true">Are you sure you want to delete this item? All pending emails associated with this email will be cancelled.</item>
                        <item name="addLabel" xsi:type="string" translate="true">Add New Email</item>
                        <item name="removeLabel" xsi:type="string" translate="true">Remove Email</item>
                    </item>
                </argument>

                <container name="item_template">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="type" xsi:type="string">email_trigger_form</item>
                            <item name="isTemplate" xsi:type="boolean">true</item>
                            <item name="component" xsi:type="string">Mirasvit_Email/js/form/components/collection/item</item>
                            <item name="childType" xsi:type="string">group</item>
                            <item name="label" xsi:type="string">Select Email Template</item>
                        </item>
                    </argument>

                    <fieldset name="chain_general">
                        <argument name="data" xsi:type="array">
                            <item name="config" xsi:type="array">
                                <item name="additionalClasses" xsi:type="string">admin__fieldset-offset</item>
                                <item name="label" xsi:type="string">General</item>
                                <item name="collapsible" xsi:type="boolean">true</item>
                                <item name="opened" xsi:type="boolean">true</item>
                                <item name="displayArea" xsi:type="string">body</item>
                            </item>
                        </argument>

                        <field name="template_id">
                            <argument name="data" xsi:type="array">
                                <item name="options" xsi:type="object">Mirasvit\EmailDesigner\Model\Config\Source\Template</item>
                                <item name="config" xsi:type="array">
                                    <item name="label" xsi:type="string" translate="true">Email Template</item>
                                    <item name="dataType" xsi:type="string">text</item>
                                    <item name="formElement" xsi:type="string">select</item>
                                    <item name="elementTmpl" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                                    <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                                    <item name="filterOptions" xsi:type="boolean">true</item>
                                    <item name="showCheckbox" xsi:type="boolean">false</item>
                                    <item name="disableLabel" xsi:type="boolean">true</item>
                                    <item name="multiple" xsi:type="boolean">false</item>
                                    <item name="source" xsi:type="string">chain</item>
                                    <item name="visible" xsi:type="boolean">true</item>
                                    <item name="validation" xsi:type="array">
                                        <item name="required-entry" xsi:type="boolean">true</item>
                                    </item>
                                    <item name="displayArea" xsi:type="string">body</item>
                                    <item name="caption" xsi:type="string" translate="true">-- Please Select --</item>
                                </item>
                            </argument>
                        </field>

                        <fieldset name="delivery_settings">
                            <argument name="data" xsi:type="array">
                                <item name="config" xsi:type="array">
                                    <item name="label" xsi:type="string">Delivery Time Delay</item>
                                    <item name="displayArea" xsi:type="string">body</item>
                                </item>
                            </argument>

                            <field name="day">
                                <argument name="data" xsi:type="array">
                                    <item name="config" xsi:type="array">
                                        <item name="addafter" xsi:type="string" translate="true">day(s)</item>
                                        <item name="placeholder" xsi:type="string">0</item>
                                        <item name="dataType" xsi:type="string">number</item>
                                        <item name="formElement" xsi:type="string">input</item>
                                        <item name="source" xsi:type="string">chain</item>
                                        <item name="visible" xsi:type="boolean">true</item>
                                        <item name="displayArea" xsi:type="string">body</item>
                                        <item name="component" xsi:type="string">Mirasvit_Email/js/form/element/masked-input</item>
                                        <item name="elementTmpl" xsi:type="string">Mirasvit_Email/form/element/input</item>
                                        <item name="additionalClasses" xsi:type="string">admin__field-delay</item>
                                        <item name="validation" xsi:type="array">
                                            <item name="validate-digits" xsi:type="boolean">true</item>
                                        </item>
                                    </item>
                                </argument>
                            </field>

                            <field name="hour">
                                <argument name="data" xsi:type="array">
                                    <item name="options" xsi:type="object">Mirasvit\Email\Model\Config\Source\Hours</item>
                                    <item name="config" xsi:type="array">
                                        <item name="dataType" xsi:type="string">text</item>
                                        <item name="formElement" xsi:type="string">select</item>
                                        <item name="source" xsi:type="string">chain</item>
                                        <item name="visible" xsi:type="boolean">true</item>
                                        <item name="displayArea" xsi:type="string">body</item>
                                        <item name="additionalClasses" xsi:type="string">admin__field-delay</item>
                                        <item name="caption" xsi:type="string" translate="true">-- Select Hour Delay --</item>
                                    </item>
                                </argument>
                            </field>

                            <field name="minute">
                                <argument name="data" xsi:type="array">
                                    <item name="options" xsi:type="object">Mirasvit\Email\Model\Config\Source\Minutes</item>
                                    <item name="config" xsi:type="array">
                                        <item name="dataType" xsi:type="string">text</item>
                                        <item name="formElement" xsi:type="string">select</item>
                                        <item name="source" xsi:type="string">chain</item>
                                        <item name="visible" xsi:type="boolean">true</item>
                                        <item name="displayArea" xsi:type="string">body</item>
                                        <item name="additionalClasses" xsi:type="string">admin__field-delay</item>
                                        <item name="tooltip" xsi:type="array">
                                            <item name="link" xsi:type="string">http://docs.mirasvit.com/module-email/current/trigger/email_chain</item>
                                            <item name="description" xsi:type="string" translate="true">e.g. send an email 1 day 2 hours 35 minutes later. See more information on delaying email sending in our documentation.</item>
                                        </item>
                                        <item name="caption" xsi:type="string" translate="true">-- Select Minute Delay --</item>
                                    </item>
                                </argument>
                            </field>

                            <!--<field name="time_interval">
                                <argument name="data" xsi:type="array">
                                    <item name="options" xsi:type="object">Mirasvit\Email\Model\Config\Source\TimeInterval</item>
                                    <item name="config" xsi:type="array">
                                        <item name="label" xsi:type="string" translate="true">Time interval</item>
                                        <item name="dataType" xsi:type="string">string</item>
                                        <item name="formElement" xsi:type="string">select</item>
                                        <item name="elementTmpl" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                                        <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                                        <item name="showCheckbox" xsi:type="boolean">false</item>
                                        <item name="multiple" xsi:type="boolean">false</item>
                                        <item name="disableLabel" xsi:type="boolean">true</item>
                                        <item name="source" xsi:type="string">chain</item>
                                        <item name="visible" xsi:type="boolean">true</item>
                                        <item name="displayArea" xsi:type="string">body</item>
                                    </item>
                                </argument>
                            </field>-->

                            <field name="exclude_days">
                                <argument name="data" xsi:type="array">
                                    <item name="options" xsi:type="object">\Magento\Config\Model\Config\Source\Locale\Weekdays</item>
                                    <item name="config" xsi:type="array">
                                        <item name="label" xsi:type="string" translate="true">Excluded Weekdays</item>
                                        <item name="formElement" xsi:type="string">select</item>
                                        <item name="elementTmpl" xsi:type="string">ui/grid/filters/elements/ui-select</item>
                                        <item name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</item>
                                        <item name="componentType" xsi:type="string">field</item>
                                        <item name="filterOptions" xsi:type="boolean">false</item>
                                        <item name="showCheckbox" xsi:type="boolean">true</item>
                                        <item name="disableLabel" xsi:type="boolean">true</item>
                                        <item name="multiple" xsi:type="boolean">true</item>
                                        <item name="source" xsi:type="string">chain</item>
                                        <item name="visible" xsi:type="boolean">true</item>
                                        <item name="displayArea" xsi:type="string">body</item>
                                        <item name="notice" xsi:type="string" translate="true">Do not send emails these days.</item>
                                    </item>
                                </argument>
                            </field>
                        </fieldset>
                    </fieldset>

                    <fieldset name="coupon">
                        <argument name="data" xsi:type="array">
                            <item name="config" xsi:type="array">
                                <item name="additionalClasses" xsi:type="string">admin__fieldset-offset</item>
                                <item name="label" xsi:type="string">Coupon</item>
                                <item name="collapsible" xsi:type="boolean">true</item>
                                <item name="opened" xsi:type="boolean">false</item>
                                <item name="displayArea" xsi:type="string">body</item>
                            </item>
                        </argument>

                        <field name="coupon_enabled">
                            <argument name="data" xsi:type="array">
                                <item name="options" xsi:type="object">Magento\Config\Model\Config\Source\Yesno</item>
                                <item name="config" xsi:type="array">
                                    <item name="label" xsi:type="string" translate="true">Include coupon in email</item>
                                    <item name="dataType" xsi:type="string">text</item>
                                    <item name="formElement" xsi:type="string">select</item>
                                    <item name="component" xsi:type="string">Mirasvit_Email/js/form/element/select</item>
                                    <item name="source" xsi:type="string">chain</item>
                                    <item name="visible" xsi:type="boolean">true</item>
                                    <item name="displayArea" xsi:type="string">body</item>
                                    <item name="default" xsi:type="string">0</item>
                                    <item name="depending" xsi:type="array">
                                        <item name="coupon_sales_rule_id" xsi:type="string">coupon_sales_rule_id</item>
                                        <item name="coupon_expires_days" xsi:type="string">coupon_expires_days</item>
                                    </item>
                                </item>
                            </argument>
                        </field>
                        <field name="coupon_sales_rule_id">
                            <argument name="data" xsi:type="array">
                                <item name="options" xsi:type="object">\Mirasvit\Email\Model\Config\Source\SalesRule</item>
                                <item name="config" xsi:type="array">
                                    <item name="label" xsi:type="string" translate="true">Shopping Cart Price Rule</item>
                                    <item name="dataType" xsi:type="string">text</item>
                                    <item name="formElement" xsi:type="string">select</item>
                                    <item name="component" xsi:type="string">Mirasvit_Email/js/form/element/select</item>
                                    <item name="depends" xsi:type="string">coupon_enabled</item>
                                    <item name="source" xsi:type="string">chain</item>
                                    <item name="visible" xsi:type="boolean">false</item>
                                    <item name="displayArea" xsi:type="string">body</item>
                                    <item name="caption" xsi:type="string" translate="true">-- Select Cart Price Rule --</item>
                                    <item name="visibleValue" xsi:type="string">1</item>
                                    <item name="tooltip" xsi:type="array">
                                        <item name="link" xsi:type="string">http://docs.mirasvit.com/module-email/current/trigger/email_chain</item>
                                        <item name="description" xsi:type="string" translate="true">The coupon codes are generated automatically. Check the option "Use Auto Generation" at the cart price rule to use it.</item>
                                    </item>
                                </item>
                            </argument>
                        </field>
                        <field name="coupon_expires_days">
                            <argument name="data" xsi:type="array">
                                <item name="config" xsi:type="array">
                                    <item name="label" xsi:type="string" translate="true">Coupon expires after, days</item>
                                    <item name="dataType" xsi:type="string">number</item>
                                    <item name="formElement" xsi:type="string">input</item>
                                    <item name="component" xsi:type="string">Mirasvit_Email/js/form/element/abstract</item>
                                    <item name="depends" xsi:type="string">coupon_enabled</item>
