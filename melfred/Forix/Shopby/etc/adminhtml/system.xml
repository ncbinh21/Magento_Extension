<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="banner_rig" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Shop By RIG</label>
            <tab>forix</tab>
            <resource>Forix_Shopby::config_rigbanner</resource>
            <group id="general" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="image_rig" translate="label" type="image" sortOrder="0" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Banner</label>
                    <backend_model>Forix\Shopby\Model\Config\Backend\Image</backend_model>
                    <base_url type="media" scope_info="1">shopby_rig</base_url>
                </field>
                <field id="category_exclude" translate="label comment" type="text" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Ids category exclude from Shop by Rig</label>
                    <comment>[ex:] 1,2,3</comment>
                </field>
            </group>
        </section>
    </system>
</config>
